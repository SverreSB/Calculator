<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oneBtn" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/fourBtn" app:layout_constraintEnd_toStartOf="@+id/twoBtn"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="@string/four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourBtn" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sevenBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="@string/seven_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sevenBtn" android:layout_marginTop="228dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="@string/eight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eightBtn" app:layout_constraintStart_toEndOf="@+id/sevenBtn"
            android:layout_marginStart="8dp" android:layout_marginTop="228dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/five_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fiveBtn" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/eightBtn" app:layout_constraintStart_toEndOf="@+id/fourBtn"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twoBtn" app:layout_constraintEnd_toStartOf="@+id/threeBtn" android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/fiveBtn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nineBtn"
            android:layout_marginTop="228dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" android:text="@string/nine_button"/>
    <Button
            android:text="@string/six_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sixBtn" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nineBtn" app:layout_constraintStart_toEndOf="@+id/fiveBtn"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/three_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threeBtn" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sixBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"/>
    <Button
            android:text="@string/zero_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zeroBtn" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/twoBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.385" app:layout_constraintVertical_bias="0.228"/>
</android.support.constraint.ConstraintLayout>